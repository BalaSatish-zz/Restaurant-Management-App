<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:fontFamily="serif"
        android:layout_toLeftOf="@+id/bDecrease"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvCost"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvName"
        android:paddingLeft="5dp"
        android:text="TextView" />

    <Button
        android:id="@+id/bDecrease"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:padding="5dp"
        android:text="-"
        android:textColor="#000000"
        android:alpha="0.5"
        android:backgroundTint="#CFD8DC"
        android:layout_alignTop="@+id/bIncrease"
        android:layout_toLeftOf="@+id/tvQuantity"
        android:layout_toStartOf="@+id/tvQuantity" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:layout_above="@+id/tvCost"
        android:layout_toLeftOf="@+id/bIncrease"
        android:layout_toStartOf="@+id/bIncrease" />

    <Button
        android:id="@+id/bIncrease"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:textColor="#000000"
        android:backgroundTint="#CFD8DC"
        android:padding="5dp"
        android:alpha="0.5"
        android:text="+"
        android:layout_alignTop="@+id/tvQuantity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>