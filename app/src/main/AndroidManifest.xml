        </activity>
        <activity android:name=".Activities.Access.LoginActivity" />
        <activity android:name=".Activities.Access.RegisterActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.satish.bunny.tanga.Activities.Access.RegisterActivity" />
        </activity>
        <activity android:name=".Activities.Details.DetailsActivity">
