        <activity android:name=".Activities.Customer.MenuOrderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.satish.bunny.tanga.Activities.Customer.MenuOrderActivity" />
        </activity>
        <activity android:name=".Activities.Customer.HotelSelectActivity">
