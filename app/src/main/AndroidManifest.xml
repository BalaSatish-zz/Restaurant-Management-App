        </activity>
        <activity android:name=".Activities.Customer.QRScannerActivity" />
        <activity android:name=".Activities.Owner.QRGeneratorActivity" />
        <activity android:name=".Activities.Owner.TypesEditorActivity" />
        <activity android:name=".Activities.Owner.TakeAwayActivity"/>
        <activity android:name=".Activities.Owner.HotelManagerActivity" />
        <activity android:name=".Activities.Owner.OrderMangerActivity" />
        <activity android:name=".OrderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OrderActivity" />
        </activity>
        <activity android:name=".PaytmGateWay" />
